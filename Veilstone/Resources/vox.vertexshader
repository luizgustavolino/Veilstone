#version 330 core

// Input data
layout(location = 0) in vec2 vertexPosition_screenspace;
layout(location = 1) in vec2 vertexUV;

// Output data
out vec2 UV;

void main(){

    vec2 vertexPosition_homoneneousspace = vertexPosition_screenspace - vec2(360,225);
    vertexPosition_homoneneousspace /= vec2(360,225);
    gl_Position =  vec4(vertexPosition_homoneneousspace,0,1);
    
    UV = vertexUV;
}

